name: CI/CD Pipeline

on:
  push:
    branches: [ main ]

permissions:
  contents: read # Erforderlich, um den Code auszuchecken
  id-token: write # Erforderlich für Workload Identity Federation (OIDC)

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    steps:
    - name: Checkout code
      uses: actions/checkout@v4

    # NEU: Authentifizierung über Workload Identity Federation (WIF) / OIDC
    - name: Authenticate to Google Cloud (WIF)
      id: auth
      uses: google-github-actions/auth@v2
      with:
        # Dein tatsächlicher Workload Identity Provider Ressourcenname aus dem Screenshot
        # HINWEIS: Hier wird der Pool als Ganzes referenziert, da die Bindung ein '*' am Ende hat.
        workload_identity_provider: projects/396694012221/locations/global/workloadIdentityPools/github-podtracker-pool-tsp/providers/github-codespaces
        # DIES IST DER SERVICE ACCOUNT, DESSEN IDENTITÄT ANGENOMMEN WIRD (Deine korrigierte E-Mail-Adresse)
        service_account: my-service-account@amiable-mix-465520-u7.iam.gserviceaccount.com
        # Optional: project_id: amiable-mix-465520-u7 # Kann hier oder in setup-gcloud gesetzt werden

    - name: Set up Google Cloud SDK
      uses: google-github-actions/setup-gcloud@v1
      with:
        project_id: amiable-mix-465520-u7 # Dein GCP Projekt ID
        # service_account_key: ${{ secrets.GCP_SA_KEY }} # DIESE ZEILE WIRD ENTFERNT!
        # export_default_credentials: true # Nicht mehr nötig, da auth@v2 dies handhabt

    - name: Configure Docker for Google Container Registry
      run: gcloud auth configure-docker

    # Setup Docker Buildx bleibt wie gehabt
    - name: Set up Docker Buildx
      id: buildx
      uses: docker/setup-buildx-action@v3

    - name: Build and Push Docker image
      uses: docker/build-push-action@v5
      with:
        context: .
        push: true
        tags: gcr.io/amiable-mix-465520-u7/podtracker-image:latest
        cache-from: type=gha
        cache-to: type=gha,mode=max
        builder: ${{ steps.buildx.outputs.name }}

    - name: Deploy to Cloud Run
      uses: google-github-actions/deploy-cloudrun@v1
      with:
        service: podcast-tracker-app # Dein Cloud Run Dienstname
        image: gcr.io/amiable-mix-465520-u7/podtracker-image:latest
        region: europe-west3
